{% extends "base.twig" %}

{% block title %}Gerer les Commandes{% endblock %}

{% block content %}
	{{ include('menuAdmin.twig') }}

<h3>Gere les commandes de vos clients en ligne</h3>

	<div class="row">
		<form class="col s10" action="actionCommandeAdmin.php" method="post">	
       		<div class="row">
            	<div class="input-field col s10">
            	    <input id="numero" type="text" name="numero" class="validate">
        		    <label for="numero">Entrer un numéro de commande :</label>
            	</div>
       	 	</div>
			<div class="input-field col s10">
			    <label></label>
			    <select name="etat">
			    	<option value="" disabled selected>Choisir l'état de la commande</option>
			    	<option value="EN COURS">En cours</option>
			    	<option value="PRET">Prêt</option>
			    </select>
			    
			</div>
			<div class="input-field col s5">
					<button id="valider" class="btn waves-effect waves-light" type="submit" name="action" value="valider">Valider
					</button>
			</div>
			<div class="input-field col s5">
					<button class="btn waves-effect waves-light" type="submit" name="action" value="supprimer">Supprimer
					</button>
			</div>
		</form>
	</div>

	<p>{{codeRetour}}</p>

{% endblock %}

{% block script %}
	$(document).ready(function() {
    	$('select').material_select();
	});
{% endblock %}
