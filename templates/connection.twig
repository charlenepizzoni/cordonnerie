{% extends "base.twig" %}

{% block title %}Connexion{% endblock %}
{% block head %}
	<link rel="stylesheet" href="style.css" />
{% endblock%}

{% block content %}

	<div class="row">
    <form class="col s12">
    	<div class="row">
        	<div class="input-field col s12">
          		<input id="last_name" type="text" class="validate">
          		<label for="last_name"><span class="orange-text text-darken-4">Identifiant (votre nom) :</span></label>
        	</div>
    	</div>
    	<div class="row">
        	<div class="input-field col s12">
        		<input id="password" type="password" class="validate">
        		<label for="password"><span class="orange-text text-darken-4">Mot de passe :</span></label>
        	</div>
    	</div>
  		<a class="waves-effect waves-light btn orange darken-4">Se connecter</a>
    </form>
  </div>
{% endblock %}
